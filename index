<script>
function checkPassword() {

  const correct = "macintosh"; // ← CHANGE THIS
  const entered = document.getElementById("password").value;

  if (entered === correct) {
    window.location.href = "home.html";
  } else {
    document.getElementById("error").textContent =
      "Incorrect password.";
  }
}
</script>

